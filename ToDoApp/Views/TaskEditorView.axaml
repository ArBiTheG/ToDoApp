<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ToDoApp.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ToDoApp.Views.TaskEditorView">
  <Design.DataContext>
    <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
    <vm:TaskEditorViewModel/>
  </Design.DataContext>
  <Grid Grid.RowDefinitions="auto,*,auto">
    <Border Grid.Row="1">
      <StackPanel>
        <TextBox VerticalAlignment="Center" 
                 Text="{Binding Name}"/>
        <TextBox VerticalAlignment="Center" Height="64" 
                 Text="{Binding Description}"/>
        <Grid ColumnDefinitions="*,2*,*">
          <TextBlock Grid.Column="0" VerticalAlignment="Center"
                     Text="Дата выполнения"/>
          <DatePicker Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch"
                      SelectedDate="{Binding DeadlineDate}"/>
        </Grid>
        <Grid ColumnDefinitions="*,2*,*">
          <TextBlock Grid.Column="0" VerticalAlignment="Center"
                     Text="Время выполнения"/>
          <TimePicker Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch"
                      SelectedTime="{Binding DeadlineTime}"/>
        </Grid>
      </StackPanel>
    </Border>
    <Border Grid.Row="2">
      <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
        <Button Margin="2" Width="96" HorizontalContentAlignment="Center" Content="Применить" IsDefault="True" 
                Command="{Binding SubmitCommand}" CommandParameter="{x:True}"/>
        <Button Margin="2" Width="96" HorizontalContentAlignment="Center" Content="Отмена"
                Command="{Binding SubmitCommand}" CommandParameter="{x:False}"/>
      </StackPanel>
    </Border>
  </Grid>
</UserControl>
